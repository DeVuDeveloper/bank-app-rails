<% content_for :heading do %>
  <h1 class="mb-0"><%= title "Client #{@client.name} loan" %></h1>
<% end %>

<% content_for :body do %>
  <% unless @loans.empty? %>
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th>Loan number</th>
          <th>Branch</th>
          <th>Operate</th>
        </tr>
      </thead>

      <tbody>
        <% @loans.each do |loan| %>
          <tr>
            <td><%= loan.id %></td>
            <td><%= link_to loan.branch_name, branch_path(loan.branch_id) %></td>
            <td>
              <%= link_to raw(t'actions.view'), loan, class: 'btn btn-outline-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    Client <%= @client.name %>No Loan
  <% end %>
<% end %>

<% content_for :footer do %>
  <%= link_to raw(t'actions.back'), @client, class: 'btn btn-secondary' %>
<% end %>

<%= render template: (@loans.empty? ? 'layouts/card' : 'layouts/listing') %>
